{
    "Function Definition": {
        "prefix": "func",
        "body": [
            "func ${1:functionName}(${2:params}) {",
            "   ${3:// body}",
            "   return ${4:result};",
            "}$0"
        ],
        "description": "定义函数"
    },
    "If Statement": {
        "prefix": "if",
        "body": [
            "if (${1:condition}) {",
            "   ${2:// body}",
            "} else {",
            "   ${3:// else body}",
            "};"
        ],
        "description": "条件分支语句"
    },
    "While Statement": {
        "prefix": "while",
        "body": [
            "while (${1:condition}) {",
            "   ${2:// body}",
            "};"
        ],
        "description": "while循环语句"
    },
    "Declaration Statment": {
        "prefix": "let",
        "body": [
            "let ${1:varName}: ${2:type} = ${3:value};"
        ],
        "description": "声明变量"
    },
    "Comment": {
        "prefix": "//",
        "body": [
            "// ${1:comment}"
        ],
        "description": "单行注释"
    }
}